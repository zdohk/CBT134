//SYSIN    DD  DUMMY
//*
//*  2. ASSEMBLE SUBROUTINES WRITTEN IN ASSEMBLER
//ASM     EXEC PGM=ASMA90,PARM='OBJECT,NODECK'
//SYSPRINT DD  SYSOUT=*
//SYSLIB   DD  DSN=SYS1.MACLIB,DISP=SHR
//SYSLIN   DD  DSN=&&LOADSET,DISP=(MOD,PASS)
//SYSUT1   DD  DSN=&&SYSUT1,UNIT=VIO,
//             SPACE=(CYL,5,,CONTIG,ROUND)
//SYSIN    DD  DSN=&SYSUID..CBT134.DATA(DECDATE),DISP=SHR
