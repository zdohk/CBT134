 ORDER REVIEW,REVIEW2
 ENTRY REVIEW
 ALIAS REV,REVVSAM,HEL,FSHELP,FSH,REVED,REVOUT,REVLEV,RFE
 NAME REVIEW(R)
/*
//AMODE31 EXEC PGM=IEFBR14  IKJEFT01
//STEPLIB  DD  DSN=ISP.V2R0M0.LLIB,DISP=SHR
//SYSTSPRT DD  SYSOUT=*
//SYSTSIN  DD  *
PDS 'GREG.REVIEW.LOAD'
AT REVIEW  AMODE31
AT FSH     AMODE31
AT FSHELP  AMODE31
AT HEL     AMODE31
AT REV     AMODE31
AT REVED   AMODE31
AT REVLEV  AMODE31
AT REVOUT  AMODE31
AT REVVSAM AMODE31
AT RFE     AMODE31
END
